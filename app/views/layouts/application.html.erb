<!DOCTYPE html>
<html>
<head>
  <title>IHeartBeer</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav>
    <ul>
      <% if current_user %>
          <h3><%= link_to "Logout", logout_path, method: :delete %></h3>
      <% else %>
        <h3><%= link_to "Login", login_path %></h3>
      <% end %>
    </ul>
  </nav>
</header>
<% flash.each do |type, msg| %>
  <%= content_tag :div, msg, class: "flash-#{type}" %>
<% end %>
<%= yield %>

</body>
</html>
